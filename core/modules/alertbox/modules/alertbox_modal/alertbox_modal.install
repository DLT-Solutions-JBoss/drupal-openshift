<?php

/**
 * @file
 * AlertBox Module.
 */

/**
 * Implements hook_install().
 */
function alertbox_modal_install() {
  // Set default config values.
  \Drupal::configFactory()
    ->getEditable('alertbox.settings')
    ->set('alertbox_show_modal', FALSE)
    ->save();
}

/**
 * Implements hook_uninstall().
 */
function alertbox_modal_uninstall() {
  \Drupal::configFactory()
    ->getEditable('alertbox.settings')
    ->set('alertbox_show_modal', FALSE);
}
